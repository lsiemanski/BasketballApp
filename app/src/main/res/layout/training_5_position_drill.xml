<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include android:id="@+id/drill_5_position_shooting" layout="@layout/drill_5_position_shooting"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:background="@drawable/double_floor_dark">

        <TableLayout
            android:id="@+id/header_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="150dp"
                    android:text="Position"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/light_brown_panel"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:text="Result"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/light_brown_panel"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="80dp"
                    android:text="Spot"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/light_brown_panel"/>

                <TextView
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    android:text="Total"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/light_brown_panel"/>

            </TableRow>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <TableLayout
                    android:id="@+id/report_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                </TableLayout>

            </ScrollView>

        </TableLayout>



    </LinearLayout>

</LinearLayout>