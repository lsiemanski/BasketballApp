<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/basketball_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/basketball_floor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="180dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintEnd_toEndOf="@+id/basketball_floor"
        app:layout_constraintStart_toStartOf="@id/basketball_floor"
        app:layout_constraintTop_toTopOf="@id/basketball_floor" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot1"
        app:layout_constraintRight_toRightOf="@id/spot1"
        app:layout_constraintTop_toBottomOf="@id/spot1" />

</androidx.constraintlayout.widget.ConstraintLayout>