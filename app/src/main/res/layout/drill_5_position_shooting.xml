<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/basketball_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/basketball_floor"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/spot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintStart_toStartOf="@id/basketball_floor"
        app:layout_constraintTop_toTopOf="@id/basketball_floor" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot1"
        app:layout_constraintRight_toRightOf="@id/spot1"
        app:layout_constraintTop_toBottomOf="@id/spot1" />

    <ImageView
        android:id="@+id/spot2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="92dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintBottom_toBottomOf="@+id/basketball_floor"
        app:layout_constraintStart_toStartOf="@id/basketball_floor" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot2"
        app:layout_constraintRight_toRightOf="@id/spot2"
        app:layout_constraintTop_toBottomOf="@id/spot2" />

    <ImageView
        android:id="@+id/spot3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="48dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintBottom_toBottomOf="@+id/basketball_floor"
        app:layout_constraintStart_toStartOf="@id/basketball_floor" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot3"
        app:layout_constraintRight_toRightOf="@id/spot3"
        app:layout_constraintTop_toBottomOf="@id/spot3" />

    <ImageView
        android:id="@+id/spot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="92dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintBottom_toBottomOf="@+id/basketball_floor"
        app:layout_constraintEnd_toEndOf="@id/basketball_floor" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot4"
        app:layout_constraintRight_toRightOf="@id/spot4"
        app:layout_constraintTop_toBottomOf="@id/spot4" />

    <ImageView
        android:id="@+id/spot5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription=""
        android:scaleType="centerCrop"
        android:src="@drawable/spot_transition"
        app:layout_constraintEnd_toEndOf="@id/basketball_floor"
        app:layout_constraintTop_toTopOf="@+id/basketball_floor" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/spot5"
        app:layout_constraintRight_toRightOf="@id/spot5"
        app:layout_constraintTop_toBottomOf="@id/spot5" />

</androidx.constraintlayout.widget.ConstraintLayout>